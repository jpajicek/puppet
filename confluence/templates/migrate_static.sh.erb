#!/bin/bash

IP=$1
USER=confluence


if [[ -z $IP ]]; then

echo "This script is use to rsync remote directories to the local server"
echo "Usage: ./`basename $0` <remote ip>"
exit
fi

su -c "rsync -av -e 'ssh -o StrictHostKeyChecking=no -o UserKnownHostsFile=/dev/null' $USER@$IP:~/attachments ~/" $USER
su -c "rsync -av -e 'ssh -o StrictHostKeyChecking=no -o UserKnownHostsFile=/dev/null' $USER@$IP:~/imgEffects ~/" $USER
su -c "rsync -av -e 'ssh -o StrictHostKeyChecking=no -o UserKnownHostsFile=/dev/null' $USER@$IP:~/thumbnails ~/" $USER
su -c "rsync -av -e 'ssh -o StrictHostKeyChecking=no -o UserKnownHostsFile=/dev/null' $USER@$IP:~/viewfile ~/" $USER

